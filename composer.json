{
    "name": "godaddy/go",
    "type": "wordpress-theme",
    "authors": [
        {
            "name": "GoDaddy",
            "homepage": "http://www.godaddy.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Go\\": "includes/classes/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "johnpbloch/wordpress-core": "^6.2",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "wp-cli/wp-cli-bundle": "^2.6",
        "wp-coding-standards/wpcs": "dev-develop",
        "wp-phpunit/wp-phpunit": "^6.1",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "scripts": {
        "lint": "phpcs --standard=phpcs.xml.dist",
        "format": "phpcbf --standard=phpcs.xml.dist --report-summary --report-source",
        "test": "phpunit",
        "makepot": "wp i18n make-pot . --exclude=\"node_modules,vendor\" --headers='{\"Last-Translator\":\"plugins@godaddy.com\",\"Report-Msgid-Bugs-To\":\"https://github.com/godaddy-wordpress/go/issues\"}' --file-comment='Copyright (c) GoDaddy Operating Company, LLC. All Rights Reserved.'"
    }
}
