<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Themes">
	<description>Generally-applicable sniffs for WordPress themes</description>

	<rule ref="WordPress">
		<exclude name="Squiz.PHP.CommentedOutCode.Found"></exclude>
		<exclude name="Squiz.PHP.NonExecutableCode.Unreachable"></exclude>
	</rule>

	<exclude-pattern>*/.dev/*</exclude-pattern>
	<exclude-pattern>*/.git/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
